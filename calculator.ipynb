import tkinter as tk
from tkinter import messagebox
from tkinter import ttk

def calculate():
    userinput = entry.get().replace(" ", "")
    
    try:
        if '+' in userinput:
            a, b = userinput.split('+')
            answer = float(a) + float(b)
            result_label.config(text=f"Answer :\n{userinput} = {answer}")

        elif '-' in userinput:
            a, b = userinput.split('-')
            answer = float(a) - float(b)
            result_label.config(text=f"Answer :\n{userinput} = {answer}")

        elif '*' in userinput:
            a, b = userinput.split('*')
            answer = float(a) * float(b)
            result_label.config(text=f"Answer :\n{userinput} = {answer}")

        elif '/' in userinput:
            a, b = userinput.split('/')
            answer = float(a) / float(b)
            result_label.config(text=f"{userinput} : {answer}")
            roundedans=round(answer)
            roundedans2=round(answer,2)
            result_label.config(text=f"Answer:\n{userinput} = {answer}\nRounded: {roundedans}\nRounded (2 dp): {roundedans2}")
            return

        else: 
            result_label.config(text="Not possible, I received invalid input!")

    except ZeroDivisionError:
        messagebox.showerror("Error: You cannot divide by zero!")

    except:
        messagebox.showerror("Error: Invalid number format!")

def add_char(char):
    entry.insert(tk.END, char)

def clear_entry():
    entry.delete(0, tk.END)
    result_label.config(text="")

def go_to_calculator():
    root.attributes("-alpha", 0)  # start invisible
    welcome_frame.pack_forget()
    calculator_frame.pack(fill="both", expand=True)
    fade_in()

def go_back_home():
    root.attributes("-alpha", 0)
    calculator_frame.pack_forget()
    welcome_frame.pack(fill="both", expand=True)
    fade_in()

def fade_in():
    for i in range(0, 101):
        root.attributes("-alpha", i/100)
        root.update()
        root.after(1)   # controls speed

# Create the main window
root = tk.Tk()
root.title("Basic Calculator")
root.geometry("400x500")
root.config(bg="#f0f0f0")

style = ttk.Style()
style.configure("Rounded.TButton", font=("Arial", 13), padding=10, relief="flat")

welcome_frame = tk.Frame(root, bg="light pink")
welcome_frame.pack(fill="both", expand=True)

title_label = tk.Label(welcome_frame, text="BASIC CALCULATOR", font=("Arial", 22, "bold"), bg="light pink")
title_label.pack(pady=40)

name_label = tk.Label(welcome_frame, text="by Srivarshini", font=("Arial", 16, "italic"), bg="light pink")
name_label.pack(pady=10)

enter_button = ttk.Button(welcome_frame, text="ENTER", style="Rounded.TButton", width=12, command=go_to_calculator)
enter_button.pack(pady=40)

# CALCULATOR SCREEN****************************
calculator_frame = tk.Frame(root, bg="light pink")

entry = ttk.Entry(calculator_frame, font=("Arial", 25), justify="right")
entry.pack(pady=15, padx=10, fill="x")

buttons = [
    ['7', '8', '9', '+'],
    ['4', '5', '6', '-'],
    ['1', '2', '3', '*'],
    ['0', '.', '/', '=']
]

frame_buttons = tk.Frame(calculator_frame, bg="light pink")
frame_buttons.pack()

for row in buttons:
    row_frame = tk.Frame(frame_buttons, bg="light pink")
    row_frame.pack()
    for btn in row:
        if btn == '=':
            ttk.Button(row_frame, text=btn, style="Rounded.TButton", width=6, command=calculate).pack(side="left", padx=5, pady=5)
        else:
            ttk.Button(row_frame, text=btn, style="Rounded.TButton", width=6, command=lambda b=btn: add_char(b)).pack(side="left", padx=5, pady=5)

back_button = ttk.Button(calculator_frame, text="Back", style="Rounded.TButton", command=go_back_home)
back_button.pack(pady=2)

ttk.Button(calculator_frame, text="Clear", style="Rounded.TButton", width=10, command=clear_entry).pack(pady=2)

result_label = tk.Label(calculator_frame, text="", font=("Arial", 12), bg="#f0f0f0")
result_label.pack()

if __name__ == "__main__":
    root.mainloop()
